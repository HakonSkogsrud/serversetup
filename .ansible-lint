---
profile: safety

exclude_paths:
  - .venv/
  - .ansible/
  - .git/
  - .vscode/
  - .github/
  - "*.drawio"
  - "*.png"
  - secrets.yml
  - inventory.yml
  - host_vars/
  - group_vars/
  - playbooks/fedora.yml

# Treat warnings as errors
strict: false

# Rules to skip
skip_list:
  - yaml[line-length]
  - yaml[indentation]

# Rules to treat as warnings instead of errors
warn_list: []

# Enable specific rules
enable_list: []

# Use YAML formatting
write_list:
  - none
