#!/bin/bash

# --- Configuration ---
LOG_FILE="{{ scheduled_update_log_file }}"
SCRIPT_NAME="{{ scheduled_update_script_name }}"

# Source logging library
source /usr/local/lib/logging.sh

# Ensure the log file is accessible
touch "$LOG_FILE" 2>/dev/null || log "WARNING" "Could not access $LOG_FILE. Logging only to cron output."

log "INFO" "Starting package update script."

source /usr/local/lib/send_pushover.sh

if command -v sudo >/dev/null 2>&1; then
  SUDO="sudo"
  log "INFO" "Sudo command found."
else
  SUDO=""
  log "INFO" "Sudo command not found, running commands directly."
fi

if command -v apt-get >/dev/null 2>&1; then
  log "INFO" "Detected apt-get system. Running updates..."
  $SUDO apt-get update -y
  if [ $? -eq 0 ]; then
    log "INFO" "Package list updated. Running upgrades..."
    $SUDO apt-get upgrade -y
    if [ $? -ne 0 ]; then
      log "ERROR" "APT upgrade failed."
      send_pushover "${pushover_token_update:-}" "Update on machine $(hostname) failed during apt upgrade" "System update FAILED" 0 "siren"
      exit 1
    fi
  else
    log "ERROR" "APT update failed."
    send_pushover "${pushover_token_update:-}" "Update on machine $(hostname) failed during apt update" "System update FAILED" 0 "siren"
    exit 1
  fi
elif command -v dnf >/dev/null 2>&1; then
  log "INFO" "Detected dnf system. Running upgrade..."
  $SUDO dnf upgrade -y
  if [ $? -ne 0 ]; then
    log "ERROR" "DNF upgrade failed."
    send_pushover "${pushover_token_update:-}" "Update on machine $(hostname) failed during dnf upgrade" "System update FAILED" 0 "siren"
    exit 1
  fi
else
  log "ERROR" "No supported package manager (apt-get or dnf) found. Aborting."
  send_pushover "${pushover_token_update:-}" "Update on machine $(hostname) failed: No package manager found" "System update FAILED" 0 "siren"
  exit 1
fi

log "INFO" "Package update completed successfully."

# Check if tailscale service is running and restart if needed
if systemctl is-active --quiet tailscaled.service; then
  log "INFO" "Detected running Tailscale service: tailscaled.service"

  # Check if tailscale needs restart after update
  if command -v dnf >/dev/null 2>&1; then
    if command -v needs-restarting >/dev/null 2>&1; then
      if needs-restarting -s 2>/dev/null | grep -q "tailscaled.service"; then
        log "INFO" "Restarting tailscaled.service after update..."
        $SUDO systemctl restart tailscaled.service
        if [ $? -eq 0 ]; then
          log "INFO" "Tailscale service restarted successfully."
        else
          log "WARNING" "Failed to restart Tailscale service."
        fi
      else
        log "INFO" "Tailscale service does not need restart."
      fi
    else
      # Fallback: always restart after dnf upgrade to be safe
      log "INFO" "needs-restarting not available. Restarting Tailscale as precaution..."
      $SUDO systemctl restart tailscaled.service
      log "INFO" "Tailscale service restarted."
    fi
  elif command -v apt-get >/dev/null 2>&1; then
    # For Debian/Ubuntu systems, check with needrestart or just restart
    if command -v needrestart >/dev/null 2>&1; then
      if needrestart -b 2>/dev/null | grep -q "NEEDRESTART-SVC: tailscaled.service"; then
        log "INFO" "Restarting tailscaled.service after update..."
        $SUDO systemctl restart tailscaled.service
        if [ $? -eq 0 ]; then
          log "INFO" "Tailscale service restarted successfully."
        else
          log "WARNING" "Failed to restart Tailscale service."
        fi
      else
        log "INFO" "Tailscale service does not need restart."
      fi
    else
      # Fallback: always restart after apt upgrade to be safe
      log "INFO" "needrestart not available. Restarting Tailscale as precaution..."
      $SUDO systemctl restart tailscaled.service
      log "INFO" "Tailscale service restarted."
    fi
  fi
else
  log "INFO" "Tailscale service not running. Skipping Tailscale restart."
fi

# Check if syncthing service is running and restart if needed
SYNCTHING_SERVICE=$(systemctl list-units "syncthing@*.service" --state=running --no-legend 2>/dev/null | awk '{print $1}' | head -n1)
if [ -n "$SYNCTHING_SERVICE" ]; then
  log "INFO" "Detected running Syncthing service: $SYNCTHING_SERVICE"

  # Check if syncthing package was updated
  if command -v dnf >/dev/null 2>&1; then
    if dnf list updates syncthing 2>/dev/null | grep -q syncthing; then
      log "INFO" "Syncthing has updates available but wasn't updated. Checking if restart needed..."
    fi
    # Check if syncthing needs restart after update
    if command -v needs-restarting >/dev/null 2>&1; then
      if needs-restarting -s 2>/dev/null | grep -q "$SYNCTHING_SERVICE"; then
        log "INFO" "Restarting $SYNCTHING_SERVICE after update..."
        $SUDO systemctl restart "$SYNCTHING_SERVICE"
        if [ $? -eq 0 ]; then
          log "INFO" "Syncthing service restarted successfully."
        else
          log "WARNING" "Failed to restart Syncthing service."
        fi
      else
        log "INFO" "Syncthing service does not need restart."
      fi
    else
      # Fallback: always restart after dnf upgrade to be safe
      log "INFO" "needs-restarting not available. Restarting Syncthing as precaution..."
      $SUDO systemctl restart "$SYNCTHING_SERVICE"
      log "INFO" "Syncthing service restarted."
    fi
  elif command -v apt-get >/dev/null 2>&1; then
    # For Debian/Ubuntu systems, check with needrestart or just restart
    if command -v needrestart >/dev/null 2>&1; then
      if needrestart -b 2>/dev/null | grep -q "NEEDRESTART-SVC: $SYNCTHING_SERVICE"; then
        log "INFO" "Restarting $SYNCTHING_SERVICE after update..."
        $SUDO systemctl restart "$SYNCTHING_SERVICE"
        if [ $? -eq 0 ]; then
          log "INFO" "Syncthing service restarted successfully."
        else
          log "WARNING" "Failed to restart Syncthing service."
        fi
      else
        log "INFO" "Syncthing service does not need restart."
      fi
    else
      # Fallback: always restart after apt upgrade to be safe
      log "INFO" "needrestart not available. Restarting Syncthing as precaution..."
      $SUDO systemctl restart "$SYNCTHING_SERVICE"
      log "INFO" "Syncthing service restarted."
    fi
  fi
else
  log "INFO" "No enabled Syncthing service found. Skipping Syncthing restart."
fi

send_pushover "${pushover_token_update:-}" "Update on machine $(hostname) successful" "System update" 0 "bike"
log "INFO" "Success notification sent."
log "INFO" "Script finished."
