[Unit]
Description=Pi-hole Gravity Update
Documentation=man:systemd.service(5)

[Service]
Type=oneshot
ExecStart=/usr/local/bin/{{ pihole_gravity_update_script_name }}.sh
StandardOutput=journal
StandardError=journal
SyslogIdentifier={{ pihole_gravity_update_script_name }}

[Install]
WantedBy=multi-user.target
