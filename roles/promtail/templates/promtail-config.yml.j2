server:
  http_listen_port: {{ promtail_port }}
  grpc_listen_port: 0

positions:
  filename: {{ promtail_positions_file }}

clients:
  - url: {{ promtail_loki_url }}

scrape_configs:
  # Systemd journal (all system logs)
  - job_name: systemd-journal
    journal:
      max_age: 12h
      labels:
        job: systemd-journal
        host: {{ ansible_hostname }}
    relabel_configs:
      - source_labels: ['__journal__systemd_unit']
        target_label: 'unit'

  # System logs
  - job_name: system
    static_configs:
      - targets:
          - localhost
        labels:
          job: syslog
          host: {{ ansible_hostname }}
          __path__: /var/log/messages

  # Auth logs
  - job_name: auth
    static_configs:
      - targets:
          - localhost
        labels:
          job: auth
          host: {{ ansible_hostname }}
          __path__: /var/log/secure

  # All log files in /var/log
  - job_name: varlog
    static_configs:
      - targets:
          - localhost
        labels:
          job: varlog
          host: {{ ansible_hostname }}
          __path__: /var/log/*.log
    relabel_configs:
      # Extract filename from path and add as 'filename' label
      - source_labels: [__path__]
        regex: '.*/([^/]+\.log)'
        target_label: filename

  # Docker container logs with service discovery
  - job_name: docker
    docker_sd_configs:
      - host: unix:///var/run/docker.sock
        refresh_interval: 30s
    relabel_configs:
      # Use container name as a label
      - source_labels: ['__meta_docker_container_name']
        regex: '/(.*)'
        target_label: container_name
      # Add container ID
      - source_labels: ['__meta_docker_container_id']
        target_label: container_id
      # Set the log path
      - source_labels: ['__meta_docker_container_id']
        target_label: __path__
        replacement: /var/lib/docker/containers/$1/*-json.log
      # Add host label
      - replacement: {{ ansible_hostname }}
        target_label: host
    pipeline_stages:
      # Parse Docker JSON log format
      - json:
          expressions:
            stream: stream
            log: log
            time: time
      - labels:
          stream:
      # Use log field as the actual log line
      - output:
          source: log
