server:
  http_listen_port: {{ promtail_port }}
  grpc_listen_port: 0

positions:
  filename: {{ promtail_positions_file }}

clients:
  - url: {{ promtail_loki_url }}

scrape_configs:
  # Systemd journal (all system logs)
  - job_name: systemd-journal
    journal:
      max_age: 12h
      labels:
        job: systemd-journal
        host: {{ ansible_hostname }}
    relabel_configs:
      - source_labels: ['__journal__systemd_unit']
        target_label: 'unit'

  # System logs
  - job_name: system
    static_configs:
      - targets:
          - localhost
        labels:
          job: syslog
          host: {{ ansible_hostname }}
          __path__: /var/log/messages

  # Auth logs
  - job_name: auth
    static_configs:
      - targets:
          - localhost
        labels:
          job: auth
          host: {{ ansible_hostname }}
          __path__: /var/log/secure

  # All log files in /var/log
  - job_name: varlog
    static_configs:
      - targets:
          - localhost
        labels:
          job: varlog
          host: {{ ansible_hostname }}
          __path__: /var/log/*.log
    relabel_configs:
      # Extract filename from path and add as 'filename' label
      - source_labels: [__path__]
        regex: '.*/([^/]+\.log)'
        target_label: filename
