server:
  http_listen_port: {{ promtail_port }}
  grpc_listen_port: 0

positions:
  filename: {{ promtail_positions_file }}

clients:
  - url: {{ promtail_loki_url }}

scrape_configs:
  # Systemd journal (all system logs)
  - job_name: systemd-journal
    journal:
      max_age: 12h
      labels:
        job: systemd-journal
        host: {{ ansible_hostname }}
    relabel_configs:
      - source_labels: ['__journal__systemd_unit']
        target_label: 'unit'

  # System logs
  - job_name: system
    static_configs:
      - targets:
          - localhost
        labels:
          job: syslog
          host: {{ ansible_hostname }}
          __path__: /var/log/messages

  # Auth logs
  - job_name: auth
    static_configs:
      - targets:
          - localhost
        labels:
          job: auth
          host: {{ ansible_hostname }}
          __path__: /var/log/secure

{% if promtail_extra_scrape_configs | length > 0 %}
  # Custom logs for this VM
{% for config in promtail_extra_scrape_configs %}
  - job_name: {{ config.job_name }}
    static_configs:
      - targets:
          - localhost
        labels:
          job: {{ config.job_name }}
          host: {{ ansible_hostname }}
          __path__: {{ config.path }}
{% if config.get('pipeline_stages') %}
    pipeline_stages:
{{ config.pipeline_stages | to_nice_yaml(indent=2) | indent(6, first=True) }}
{% endif %}
{% endfor %}
{% endif %}
