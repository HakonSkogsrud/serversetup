---
version: '3'
services:
  nebula-sync:
    image: ghcr.io/lovelaze/nebula-sync:latest
    container_name: nebula-sync
    restart: unless-stopped
    environment:
      - PRIMARY=http://10.0.0.27|{{ pihole_password }}
      - REPLICAS=http://10.0.0.77|{{ pihole_password }}
      - FULL_SYNC=true
      - RUN_GRAVITY=true
      - CRON=0 * * * *
      - WEBHOOK_SUCCESS_URL=https://api.pushover.net/1/messages.json?token={{ pushover_nebula }}&user={{ pushover_user }}&message=Nebula-sync successful
      - WEBHOOK_FAILURE_URL=https://api.pushover.net/1/messages.json?token={{ pushover_nebula }}&user={{ pushover_user }}&message=Nebula-sync failed