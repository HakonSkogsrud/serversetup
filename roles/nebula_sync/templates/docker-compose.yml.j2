---
version: '3'
services:
  nebula-sync:
    image: ghcr.io/lovelaze/nebula-sync:latest
    container_name: nebula-sync
    restart: unless-stopped
    environment:
      - PRIMARY=http://{{ pihole_main_ip}}|{{ pihole_password }}
      - REPLICAS=http://{{ pihole_backup_ip }}|{{ pihole_password }}
      - FULL_SYNC=true
      - RUN_GRAVITY=true
      - CRON=0 * * * *